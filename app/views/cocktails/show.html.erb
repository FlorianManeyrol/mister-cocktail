<h1><%= @cocktail.name %></h1>
<%= image_tag @cocktail.picture, class: 'img-resize' %>
<ul>
  <% @cocktail.doses.each do |dose|%>
  <li><%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to "Delete", dose_path(dose), method: :delete, class: 'btn btn-danger'%>
  </li>
  <% end %>
</ul>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: Ingredient.all, prompt: 'select an ingredient' %>
  <%= f.submit 'add a dose', class: "btn btn-warning"%>
<% end %>







